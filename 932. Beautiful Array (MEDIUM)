class Solution {
public:
    vector<int> beautifulArray(int n) {
        if(n==1)
            return {1};
        vector<int>even=beautifulArray(n/2);
        vector<int>odd=beautifulArray(n-(n/2));
        vector<int>ans;
        for(auto a:even)
            ans.push_back(a*2);
        for(auto b:odd)
            ans.push_back(b*2-1);
        return ans;
    }
};
