class Solution {
    static bool k(vector<int>&a,vector<int>&b)
    {
            return a[1]<b[1];
    }
public:
    int eraseOverlapIntervals(vector<vector<int>>& intervals) {
        sort(intervals.begin(),intervals.end(),k);
        int n=intervals.size(),ans=0;
        for(int i=0;i<n-1;i++)
        {
            
            int j=i;
            while(i<n-1&&intervals[i+1][0]<intervals[j][1]&&intervals[j][1]<=intervals[i+1][1])
            {   ans++;i++;}
            
            
        }
        return ans;
    }
};
