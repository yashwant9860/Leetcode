class Solution {
public:
    int mySqrt(int x) {
        int l=1,r=x;
        long long mid;
        while(l<=r)
        {
            mid=l+(r-l)/2;
            long long a=mid*mid;
            long long b=(mid+1)*(mid+1);
            long long c=(mid-1)*(mid-1);
            if(a==x)
                return mid;
            if(a>x)
            {
                if(c<x)
                    return mid-1;
                else
                    r=mid-1;
            }
            if(a<x)
            {
                if(b>x)
                    return mid;
                else
                    l=mid+1;
            }
        }
        return 0;
        
    }
};
