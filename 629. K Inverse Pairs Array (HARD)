class Solution {
public:
    int kInversePairs(int n, int k) {
        vector<vector<int>>dp(n+1,vector<int>(k+1,0));
        long long mod=1e9+7;
        int c=n*(n-1);
        c/=2;
        if(((n)*(n-1))/2==k)
            return 1;
        if((n*(n-1))/2<k)
            return 0;
        for(int i=0;i<n+1;i++)
            dp[i][0]=1;
        for(int i=1;i<n+1;i++)
        {
            for(int j=1;j<k+1;j++)
            {
                for(int l=0;l<=min(j,i-1);l++)
                {
                    dp[i][j]=(dp[i][j]+dp[i-1][j-l])%mod;
                }
            }
        }
        return dp[n][k]%mod;
    }
};




class Solution {
public:
    int kInversePairs(int n, int k) {
        vector<vector<int>>dp(n+1,vector<int>(k+1,0));
        long long mod=1e9+7;
        int c=n*(n-1);
        c/=2;
        if(((n)*(n-1))/2==k)
            return 1;
        if((n*(n-1))/2<k)
            return 0;
        for(int i=0;i<n+1;i++)
            dp[i][0]=1;
        for(int i=1;i<n+1;i++)
        {
            for(int j=1;j<k+1&&j<=i*(i-1)/2;j++)
            {
                long long val;
                if(j-i>=0)
                val=(dp[i-1][j]-dp[i-1][j-i]+mod)%mod;
                else
                    val=dp[i-1][j];
                dp[i][j]=(dp[i][j-1]+val)%mod;
            }
        }
        return dp[n][k]%mod;
    }
};
