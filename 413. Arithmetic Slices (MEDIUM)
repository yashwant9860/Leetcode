class Solution {
public:
    int numberOfArithmeticSlices(vector<int>& nums) {
        if(nums.size()<3)
            return 0;
        int d=nums[1]-nums[0],count=0,ans=0;;
        
        for(int i=1;i<nums.size()-1;i++)
        {
            if(nums[i+1]-nums[i]==d)
            {
                count++;
                ans+=count;
            }
            else{
                d=nums[i+1]-nums[i];
                count=0;
            }
        }
        return ans;
    }
};
