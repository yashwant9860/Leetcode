class Solution {
    bool isOK(vector<int>&dist,double hour,int h)
    {
        int n=dist.size();
        double k=0;
        for(int i=0;i<n-1;i++)
        {
            if(dist[i]%h==0)
                k+=dist[i]/h;
            else
                k+=dist[i]/h+1;
        }
        k+=((double)dist[n-1]/h);
        return k<=hour;
    }
public:
    int minSpeedOnTime(vector<int>& dist, double hour) {
        int l=1,r=1e7,mid,n=dist.size();
        if(n-1>=hour)
            return -1;
        while(l<r)
        {
            mid=l+(r-l)/2;
            if(isOK(dist,hour,mid))
            {
                r=mid;
            }
            else
                l=mid+1;
        }
        return r;
            
    }
};
