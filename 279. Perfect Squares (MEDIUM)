class Solution {
public:
    int numSquares(int n) {
        vector<int>dp(n+1,0),coins;
        int j=1;
        while(j*j<=n)
        {
            coins.push_back(j*j);
            j++;
        }
        dp[0]=0;
        dp[1]=1;
        for(int i=2;i<=n;i++)
        {
            dp[i]=INT_MAX;
            for(auto a:coins)
            {
                if(i-a>=0)
                {
                    dp[i]=min(dp[i],dp[i-a]+1);
                }
            }
        }
        return dp[n];
    }
};
