class CustomStack {
vector<int>v;
    int t=0,s;
    public:
    CustomStack(int maxSize) {
        v.resize(maxSize,-1);
        s=maxSize;
    }
    
    void push(int x) {
        if(t!=s)
        {v[t]=x;t++;cout<<t<<endl;}
        
    }
    
    int pop() {
        if(t>0)
        {
            return v[--t];
        }
        else
            return -1;
    }
    
    void increment(int k, int val) {
        for(int i=0;i<k&&i<t;i++)
        {
            v[i]+=val;
        }
    }
};

/**
 * Your CustomStack object will be instantiated and called as such:
 * CustomStack* obj = new CustomStack(maxSize);
 * obj->push(x);
 * int param_2 = obj->pop();
 * obj->increment(k,val);
 */
