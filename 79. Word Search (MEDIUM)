class Solution {
    bool dfs(vector<vector<char>>&b,string& w,int sz,int len,int i,int j)
    {
        if(len==sz)
        {return true;}
        if(i<0||i>b.size()-1||j<0||j>b[0].size()-1||b[i][j]!=w[len])
        return 0;
        char ch=b[i][j];
        b[i][j]='*';
       bool t=dfs(b,w,sz,len+1,i+1,j)||dfs(b,w,sz,len+1,i-1,j)||dfs(b,w,sz,len+1,i,j-1)||dfs(b,w,sz,len+1,i,j+1);
        b[i][j]=ch;
        return t;    
        }
public:
    bool exist(vector<vector<char>>& board, string word) {
        int m=board.size(),n=board[0].size(),sz=word.size();
        for(int i=0;i<m;i++)
        {
            for(int j=0;j<n;j++)
            {
                if(board[i][j]==word[0])
                {       
                    if(dfs(board,word,sz,0,i,j))
                        return true;
                }
            }
        }
        return false;
    }
};
