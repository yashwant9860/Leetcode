class Solution {
public:
    int maxTurbulenceSize(vector<int>& arr) {
        int a=1,b=1,n=arr.size(),mx1=1,mx2=1;
        for(int i=0;i<n-1;i++)
        {
            if(i%2==0)
            {
                if(arr[i]<arr[i+1])
                    a++;
                else
                    a=1;
                if(arr[i]>arr[i+1])
                    b++;
                else
                    b=1;            
            }
            else
            {
                if(arr[i]>arr[i+1])
                    a++;
                else
                    a=1;
                if(arr[i]<arr[i+1])
                    b++;
                else
                    b=1;
            }
            mx1=max(mx1,a);
            mx2=max(mx2,b);
        }
        return max(mx1,mx2);
    }
};
