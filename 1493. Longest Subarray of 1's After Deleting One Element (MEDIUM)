class Solution {
public:
    int longestSubarray(vector<int>& nums) {
        int n=nums.size(),count=0;
        for(int i=1;i<n;i++)
        {
            if(nums[i]==1)
                nums[i]+=nums[i-1];
            else
                count++;
        }
        if(nums[0]==0)
            count++;
        int ans=0;
        for(int i=n-2;i>=0;i--)
        {
            if(nums[i]!=0 && nums[i+1]!=0)
                nums[i]=nums[i+1];
            ans=max(ans,nums[i]);
        }
        for(int i=1;i<n-1;i++)
        {
            if(nums[i-1]!=0 && nums[i+1]!=0 && nums[i]==0)
                ans=max(ans,nums[i+1]+nums[i-1]);
        }
        if(count==0)
        return ans-1;
        else
        return ans;
    }
};
