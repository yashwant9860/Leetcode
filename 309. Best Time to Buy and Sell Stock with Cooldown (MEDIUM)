class Solution {
    int helper(vector<vector<int>>&dp,int ind,int state,vector<int>&prices)
    {
        int n=prices.size();
        if(ind>=n)
            return 0;
        if(dp[state][ind])
            return dp[state][ind];
        for(int i=ind;i<n;i++)
        {
            dp[state][ind]=max(dp[state][ind],helper(dp,i+1,state,prices));
            if(state==0)
                dp[state][ind]=max(dp[state][ind],helper(dp,i+1,1,prices)-prices[i]);
            else 
                dp[state][ind]=max(dp[state][ind],helper(dp,i+2,0,prices)+prices[i]);
        }
        return dp[state][ind];
    }
public:
    int maxProfit(vector<int>& prices) {
        int n=prices.size();
        vector<vector<int>>dp(2,vector<int>(n,0));
        return helper(dp,0,0,prices);
    }
};
