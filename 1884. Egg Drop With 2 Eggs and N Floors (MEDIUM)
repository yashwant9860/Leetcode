class Solution {
    int ans(int e,int f,vector<vector<int>>&dp)
    {
        if(e==0)
            return f;
        if(f==1||f==0)
            return f;
        if(dp[e][f])
            return dp[e][f];
        int mn=INT_MAX;
        for(int i=1;i<=f;i++)
            mn=min(mn,1+max(ans(e-1,i-1,dp),ans(e,f-i,dp)));
        return dp[e][f]=mn;
    }
public:
    int twoEggDrop(int n) {
       vector<vector<int>>dp(2,vector<int>(n+1,0));
        return ans(1,n,dp);
        
    }
};
