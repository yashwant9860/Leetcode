class Solution {
public:
    int minCost(string colors, vector<int>& neededTime) {
        int ans=0,n=colors.length();
        for(int i=0;i<n;i++)
        {
            int j=i+1,mx=neededTime[i];
            int ans1=mx;
            while(j<n&&colors[i]==colors[j])
            {
                ans1+=neededTime[j];
                mx=max(mx,neededTime[j]);
                j++;
            }
            ans+=ans1-mx;
            i=j-1;
        }
        return ans;
    }
};
