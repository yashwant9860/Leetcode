class Solution {
public:
    void nextPermutation(vector<int>& nums) {
        int n=nums.size(),j=0,flag=0;
        for(int i=n-1;i>0;i--)
        {
            if(nums[i-1]<nums[i])
            {
                flag=1;
                j=i;
                break;
            }
        }
        if(flag==0)
        {
            reverse(nums.begin(),nums.end());
            return ;
        }
        int mi=INT_MAX,ind=j;
        for(int i=j;i<n;i++)
        {
            if(mi>=nums[i]-nums[j-1]&&nums[i]>nums[j-1])
            {
                ind=i;
                mi=nums[i]-nums[j-1];
            }
        } 
        swap(nums[ind],nums[j-1]);
        reverse(nums.begin()+j,nums.end());
    }
};
