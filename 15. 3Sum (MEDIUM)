class Solution {
public:
    vector<vector<int>> threeSum(vector<int>& nums) {
        sort(nums.begin(),nums.end());
        int n=nums.size();
        vector<vector<int>>ans;
        if(n<3)
            return ans;
        for(int i=0;i<n;i++)
        {
        if(i>0 && nums[i]==nums[i-1])
            continue;
            int a=nums[i];
            int l=i+1,r=n-1;
            while(l<r)
            {
                if(nums[l]+nums[r]<-nums[i])
                {
                    l++;
                    continue;
                }
                if(nums[l]+nums[r]>-nums[i])
                {    r--;continue;}
                if(nums[l]+nums[r]==-nums[i])
                {
                    ans.push_back(vector<int>{nums[l],nums[r],a});
                    while(l<n-1&&nums[l]==nums[l+1] && l<r)
                        l++;
                    while(r>0&&nums[r]==nums[r-1] && l<r)
                        r--;
                    l++;
                    r--;
                }
            }
        }
        return ans;     
    }
};
