/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
    int trav(TreeNode* root,int target,long long curr)
    {
        if(root==NULL)
            return 0;
        long long x=curr+root->val;
        return (target==x)+trav(root->left,target,x)+trav(root->right,target,x);
    }
public:
    int pathSum(TreeNode* root, int targetSum) {
        if(root==NULL)
            return 0;
        return trav(root,targetSum,0)+pathSum(root->left,targetSum)+pathSum(root->right,targetSum);
        
    }
};
