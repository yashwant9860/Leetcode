class Solution {
public:
    int maxValueOfCoins(vector<vector<int>>& piles, int k) {
        int n=piles.size();
        vector<vector<int>>dp(n+1,vector<int>(k+1,0));
        for(int i=1;i<n+1;i++)
        {
            for(int j=1;j<k+1;j++)
            {
                dp[i][j]=dp[i-1][j];
                int s=0;
                for(int c=j-1;c>=0;c--)
                {
                    if(j-c-1<piles[i-1].size())
                    s+=piles[i-1][j-c-1];
                    else
                        break;
                    dp[i][j]=max(dp[i][j],dp[i-1][c]+s);
                }
            }
        }
    return dp[n][k];
    }
};
