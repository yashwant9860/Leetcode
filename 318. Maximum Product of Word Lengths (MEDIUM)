class Solution {
public:
    int maxProduct(vector<string>& words) {
        int n=words.size();
        vector<int>v(n,0);
        int ans=0;
        for(int i=0;i<n;i++)
        {
            for(auto ch:words[i])
                v[i]|=(1<<(ch-'a'));
            for(int j=0;j<i;j++)
            {
                if((v[i]&v[j])==0){
                    int l=(words[i].length()*words[j].length());
                ans=max(ans,l);  }
            }
        }
        return ans;
    }
};
