class Solution {
public:
    int equalSubstring(string s, string t, int maxCost) {
        int n=s.length(),sum=0,l=0,ans=0;
        vector<int>v(n);
        for(int i=0;i<n;i++)
            v[i]=abs(s[i]-t[i]);
        for(int i=0;i<n;i++)
        {
            if(sum+v[i]<=maxCost)
            {sum+=v[i];ans=max(ans,i-l+1);}
            else
            {
                sum+=v[i];
                while(sum>maxCost && l<=i)
                {
                    sum-=v[l];
                    l++;
                }
                if(v[i]<=maxCost)
                    ans=max(ans,1);
            }   
        }
        return ans;
    }
};
