class Solution {
public:
    int minReorder(int n, vector<vector<int>>& connections) {
        vector<int>v(n,0);
        v[0]=1;
        vector<vector<int>>d(n);
        int ans=0;
        queue<int>q;
        for(int i=0;i<connections.size();i++)
        {  
            d[connections[i][0]].push_back(-connections[i][1]);
            d[connections[i][1]].push_back(connections[i][0]);
            if(connections[i][0]==0)
            {
                q.push(connections[i][1]);
                ans++;
                v[connections[i][1]]=1;
            }
            if(connections[i][1]==0)
            {
                q.push(connections[i][0]);
                v[connections[i][0]]=1;
            }
        }
        while(!q.empty())
        {
            int z=q.front();
            q.pop();
            for(auto a:d[z])
            {
                int k=a;
                if(a<0)
                k*=(-1);
                if(v[k]==0)
                {
                    if(a<0){
                        ans++;
                        v[k]=1;
                        q.push(k);
                    }
                    else
                    {
                        v[k]=1;
                        q.push(k);
                    }
                }
            }
        }
        return ans;
    }
};
