class Solution {
public:
    int maxScoreSightseeingPair(vector<int>& values) {
        int ans=values[0],j=0;
        for(int i=1;i<values.size();i++)
        {
            ans=max(ans,values[i]-i+values[j]+j);
            
            if(values[j]+j<values[i]+i)
            {
                j=i;
            }
        }
        return ans;
    }
};
