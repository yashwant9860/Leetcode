class Solution {
public:
    int minimumAverageDifference(vector<int>& nums) {
        int n=nums.size();
        vector<long long>v(n,0);
        v[0]=nums[0];
        for(int i=1;i<n;i++)
            v[i]=v[i-1]+(long long)nums[i];
        int ans=INT_MAX;
        if(n==1)
            return 0;
        int index=0;
        for(int i=1;i<n;i++)
        {
            long long a=abs(v[i-1]/i-(v[n-1]-v[i-1])/(n-i));
            if(a==0)
                return i-1;
            if(ans>a)
            {
                index=i-1;
                ans=a;
            }
            if(i==n-1)
            {
                a=v[n-1]/n;
                if(ans>a)
                    return n-1;
            }
        }
        return index;
    }
};
