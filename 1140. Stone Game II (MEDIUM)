class Solution {
    int helper(vector<int>&s,vector<vector<int>>&dp,int i,int m)
    {
        int n=s.size();
        if(i>=n)
            return 0;
        if(i+2*m>=n)
            return s[i];
        if(dp[i][m])
            return dp[i][m];
        int mn=INT_MAX;
        for(int j=i+1;j<=i+2*m;j++)
            mn=min(mn,helper(s,dp,j,max(j-i,m)));
        dp[i][m]=s[i]-mn;
        return dp[i][m];
    }
    
public:
    int stoneGameII(vector<int>& piles) {
        int n=piles.size();
        vector<vector<int>>dp(n,vector<int>(n,0));
        if(n==1)
            return piles[0];
        vector<int>s(n,0);
        s[n-1]=piles[n-1];
        for(int i=n-2;i>=0;i--)
            s[i]+=s[i+1]+piles[i];
        return helper(s,dp,0,1);
    }
};
