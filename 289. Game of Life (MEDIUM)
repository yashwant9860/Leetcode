class Solution {
public:
    void gameOfLife(vector<vector<int>>& board) {
        int m=board.size(),n=board[0].size();
        vector<vector<int>>v(m,vector<int>(n,0));
        vector<vector<int>>board1(m+2,vector<int>(n+2,0));
        for(int i=1;i<m+1;i++)
        {
            for(int j=1;j<n+1;j++)            
                board1[i][j]=board[i-1][j-1];            
        }
        for(int i=1;i<m+1;i++)
        {
            
            for(int j=1;j<n+1;j++)
            {
                int count=0;
                count+=board1[i-1][j]+board1[i-1][j-1]+board1[i-1][j+1]+board1[i+1][j-1];
                count+=board1[i][j-1]+board1[i][j+1]+board1[i+1][j+1]+board1[i+1][j];               
                if(board1[i][j]==1)
                {
                    if(count<2)                    
                        v[i-1][j-1]=0;                    
                    if(count==2||count==3)                    
                        v[i-1][j-1]=1;                
                    if(count>3)
                        v[i-1][j-1]=0;
                }
                else
                {
                    if(count==3)                    
                        v[i-1][j-1]=1;                    
                }
            }
        }
        board=v;        
    }
};
