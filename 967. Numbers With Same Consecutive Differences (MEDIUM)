class Solution {
public:
    vector<int> numsSameConsecDiff(int n, int k) {
        queue<int>q;
        vector<int>v;
        for(int i=1;i<10;i++)
        {
            q.push(i);
        }
        int p=n-1;
        while(p--)
        {
            int s=q.size();
            for(int i=0;i<s;i++)
            {
                int c=q.front();
                int left=c%10;
                q.pop();
                if(left+k<10)
                    q.push(c*10+k+left);
                if(left-k>=0&&k!=0)
                    q.push(c*10-k+left);
            }
        }
        int s=q.size();
        for(int i=0;i<s;i++)
        {v.push_back(q.front());q.pop();}
        return v;
    }
};
