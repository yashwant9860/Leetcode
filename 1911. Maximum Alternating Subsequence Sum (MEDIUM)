class Solution {
public:
    long long maxAlternatingSum(vector<int>& nums) {
        int n=nums.size();
        vector<long>dp1(n+1,0),dp2(n+1,0);
        dp1[0]=0;
        dp2[0]=0;
        for(int i=1;i<n+1;i++)
        {
            dp1[i]=max(dp2[i-1]+nums[i-1],dp1[i-1]);
            dp2[i]=max(dp1[i-1]-nums[i-1],dp2[i-1]);
        }
        return max(dp1[n],dp2[n]);
    }
};
