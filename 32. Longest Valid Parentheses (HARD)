class Solution {
public:
    int longestValidParentheses(string s) {
        int n=s.length(),ans=0;
        vector<int>dp(n+1,0);
        if(n<=1)
            return ans;
        dp[0]=0,dp[1]=0;
        
        for(int i=2;i<n+1;i++)
        {
            if(s[i-1]=='(')
                dp[i]=0;
            else if(s[i-2]=='(' && s[i-1]==')')
                dp[i]=2+dp[i-2];
            else if(s[i-1]==')' && s[i-2]==')' &&i-dp[i-1]-2>=0 && s[i-dp[i-1]-2]=='(')
            {
                dp[i]=dp[i-1]+dp[i-dp[i-1]-2]+2;
            }
            ans=max(ans,dp[i]);
        }
        return ans;
    }
};
