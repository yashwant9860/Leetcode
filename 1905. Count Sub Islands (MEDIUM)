class Solution {
    void dfs(vector<vector<int>>&grid1,vector<vector<int>>&grid2,int i,int j,vector<int>&f)
    {
        
        if(i<0||i>=grid1.size()||j<0||j>=grid1[0].size()||grid2[i][j]==0)
            return ;
        if(grid1[i][j]==0 && grid2[i][j]==1 )
            f[0]=1;
        grid2[i][j]=0;
        dfs(grid1,grid2,i+1,j,f);
        dfs(grid1,grid2,i-1,j,f);
        dfs(grid1,grid2,i,j-1,f);
        dfs(grid1,grid2,i,j+1,f);
    }
public:
    int countSubIslands(vector<vector<int>>& grid1, vector<vector<int>>& grid2) {
        int m=grid1.size(),n=grid1[0].size();
        int ans=0;
        for(int i=0;i<m;i++)
        {
            for(int j=0;j<n;j++)
            {
                vector<int>f(1,0);
                if(grid2[i][j]==1)
                {
                    dfs(grid1,grid2,i,j,f);
                    if(f[0]==0)
                    ans+=1;
                }
            }
        }
        return ans;
    }
};
