class Solution {
public:
    int minimumTotal(vector<vector<int>>& triangle) {
        int n=triangle.size();
        vector<vector<int>>v;
        v.push_back(triangle[0]);
        for(int i=1;i<n;i++)
        {
            vector<int>v1;
            for(int j=0;j<triangle[i].size();j++)
            {
                if(j-1>=0 && j!=triangle[i].size()-1)
                {
                    v1.push_back(min(triangle[i][j]+v[i-1][j-1],triangle[i][j]+v[i-1][j]));
                }
                else if(j!=triangle[i].size()-1)
                    v1.push_back(triangle[i][j]+v[i-1][j]);
                else
                    v1.push_back(triangle[i][j]+v[i-1][j-1]);
            }
            v.push_back(v1);
        }
        int ans=v[n-1][0];
        for(int i=0;i<n;i++)
        {
            ans=min(ans,v[n-1][i]);
        }
        return ans;
    }
};
