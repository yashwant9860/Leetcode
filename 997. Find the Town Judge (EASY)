class Solution {
public:
    int findJudge(int n, vector<vector<int>>& trust) {
        vector<int>v(n+1,0);
        for(auto a:trust)
        {   if(v[a[1]]!=-1)
            v[a[1]]++;
            v[a[0]]=-1;
        }
        for(int i=0;i<n;i++)
        {
            if(v[i+1]==n-1)
                return i+1;
        }
        return -1;
        
    }
};
