class Solution {
public:
    int wiggleMaxLength(vector<int>& nums) {
        int n=nums.size(),best=1;
        vector<vector<int>>v(2,vector<int>(n,1));
        for(int i=0;i<n;i++)
        {
            for(int j=0;j<i;j++)
            {
                if(nums[i]<nums[j])
                    v[1][i]=max(v[1][i],v[0][j]+1);
                    
                if(nums[i]>nums[j])
                    v[0][i]=max(v[0][i],v[1][j]+1);
                
            }
            best=max(max(best,v[0][i]),v[1][i]);
        }
        return best;
    }
};
