class Solution {
public:
    long long mostPoints(vector<vector<int>>& questions) {
        long long n=questions.size();
        long long dp[200001]={};
        
        for(long long i=n-1;i>=0;i--)
        {
            dp[i]=max(questions[i][0]+dp[1+i+questions[i][1]],dp[i+1]);
            
        }
        return dp[0];
    }
};
