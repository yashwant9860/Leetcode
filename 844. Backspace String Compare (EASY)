class Solution {
public:
    bool backspaceCompare(string s, string t) {
        int l1=s.length(),l2=t.length();
        string s1="",t1="";
        for(int i=0;i<l1;i++)
        {
            if(s[i]=='#')
            {
                if(s1.length()>0)
                    s1.pop_back();
            }
            else
            {
                s1+=s[i];
            }
        }
        for(int i=0;i<l2;i++)
        {
            if(t[i]=='#')
            {
                if(t1.length()>0)
                    t1.pop_back();
            }
            else
            {
                t1+=t[i];
            }
        }
        return s1==t1;
    }
};
