class Solution {
public:
    int minimumSwap(string s1, string s2) {
        int n=s1.length(),x_y=0,y_x=0;
        for(int i=0;i<n;i++)
        {
            if(s1[i]=='x'&&s2[i]=='y')
                x_y++;
            if(s1[i]=='y'&&s2[i]=='x')
                y_x++;
        }
        int ans=x_y/2+y_x/2;
        if(x_y%2+y_x%2==1)
            return -1;
        else
            return ans+(x_y%2+y_x%2);
    }
};
