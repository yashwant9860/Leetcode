class Solution {
public:
    int numSubarrayProductLessThanK(vector<int>& nums, int k) {
       int n=nums.size();
        if(k==0 || k==1)
            return 0;
          int ans=0,j=0;
        long long int p=1;
        for(int i=0;i<n;i++)
        {
            if(p*nums[i]<k)
            {
                p*=nums[i];
                ans+=i-j+1;
            }
            else
            {
                p=p*nums[i];
                while(p>=k && j<=i)
                {
                    p=p/nums[j];
                    j++;
                }
                if(p<k)
                ans+=i-j+1;
            }
            
        }
        return ans;
    }
};
