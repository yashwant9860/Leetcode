class Solution {
    void dfs(vector<vector<int>>&v,int i,int j,vector<int>&f)
    {
        if(i<0||i>=v.size()||j<0||j>=v[0].size())
        {f[0]=0;}
        if(i<0||i>=v.size()||j<0||j>=v[0].size()||v[i][j]==1)
        { return ;}
        v[i][j]=1;
        dfs(v,i+1,j,f);
        dfs(v,i-1,j,f);
        dfs(v,i,j+1,f);
        dfs(v,i,j-1,f);
    }
public:
    int closedIsland(vector<vector<int>>& grid) {
        int m=grid.size();
        int n=grid[0].size();
        int s=0;
        vector<int>f(1,0);
        for(int i=0;i<m;i++)
        {
            for(int j=0;j<n;j++)
            {
                f[0]=1;
                if(grid[i][j]==1)
                    f[0]=0;
                else
                dfs(grid,i,j,f);
                if(f[0])
                {s++;}
            }
        }
        return s;
    }
};
