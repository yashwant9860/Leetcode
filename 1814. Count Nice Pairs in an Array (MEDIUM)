class Solution {
    long long rev(int i)
    {
        string s=to_string(i);
        reverse(s.begin(),s.end());
        long long a=stoll(s);
        return a;
    }
public:
    int countNicePairs(vector<int>& nums) {
        vector<long long>v;
        map<long long,int>m;
        for(int i=0;i<nums.size();i++)
        {
            long long a=nums[i]-rev(nums[i]);
            if(m.find(a)!=m.end())
            {
                m[a]++;
            }
            else
            {
                v.push_back(a);
                m.insert({a,1});
            }
        }
        long long ans=0,mod=1000000007;
        for(auto a:v)
        {
            long long s=(((long long)m[a]*(m[a]-1))/2)%mod;
            ans+=s;
            ans%=mod;
        }
        return (int)ans;
    }
};
