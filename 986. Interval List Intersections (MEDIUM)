class Solution {
public:
    vector<vector<int>> intervalIntersection(vector<vector<int>>& firstList, vector<vector<int>>& secondList) {
        int n=firstList.size(),m=secondList.size();
        int i=0,j=0;
        vector<vector<int>>ans;
        while(i<n && j<m)
        {
            if(firstList[i][0]>=secondList[j][0] && firstList[i][0]<=secondList[j][1])
            {
                
                if(firstList[i][1]<secondList[j][1])
                {
                    ans.push_back(vector<int>{firstList[i][0],firstList[i][1]});
                    
                    secondList[j][0]=firstList[i][1]+1;
                    i++;
                }
               else if(firstList[i][1]>secondList[j][1])
                {
                    ans.push_back(vector<int>{firstList[i][0],secondList[j][1]});
                    firstList[i][0]=secondList[j][1]+1;
                    j++;
                }
                else
                {
                    ans.push_back(vector<int>{firstList[i][0],secondList[j][1]});
                    j++;
                    i++;
                }
            }
            else if(secondList[j][0]>=firstList[i][0] && secondList[j][0]<=firstList[i][1])
            {
                
                if(firstList[i][1]<secondList[j][1])
                {
                    ans.push_back(vector<int>{secondList[j][0],firstList[i][1]});
                    
                    secondList[j][0]=firstList[i][1]+1;
                    i++;
                }
                else if(firstList[i][1]>secondList[j][1])
                {
                    ans.push_back(vector<int>{secondList[j][0],secondList[j][1]});
                    firstList[i][0]=secondList[j][1]+1;
                    j++;
                }
                else
                {
                    ans.push_back(vector<int>{secondList[j][0],secondList[j][1]});
                    j++;
                    i++;
                }
                
            }
            else if(firstList[i][0]>secondList[j][1])
            {
                j++;
            }
            else
                i++;
        }
        return ans;
    }
};
