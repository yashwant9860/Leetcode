class Solution {
public:
    int largestSubmatrix(vector<vector<int>>& matrix) {
        int m=matrix.size(),n=matrix[0].size(),best=0;
        vector<int>h(n,0);
        for(int i=0;i<m;i++)
        {
            for(int j=0;j<n;j++)
            {
                if(matrix[i][j]==0)h[j]=0;
                else h[j]++;
            }
            vector<int>k=h;
            sort(k.begin(),k.end(),greater<int>{});
            for(int j=0;j<n;j++)
            {
                best=max(best,k[j]*(j+1));
            }
        }
        return best;
    }
};
