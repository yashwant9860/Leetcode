class Solution {
public:
    int hIndex(vector<int>& citations) {
        
        if(citations[citations.size()-1]==0)
            return 0;
        int n=citations.size(),h=0,best=0;
        int arr[citations[n-1]+1];
        memset(arr,0,sizeof arr);
        for(int i=0;i<n;i++)
            arr[citations[i]]++;
        for(int i=citations[n-1]-1;i>=0;i--)
            arr[i]+=arr[i+1];
        for(int i=0;i<citations[n-1]+1;i++)
        {
            
            if(arr[i]>=i)
                h=i;
            best=max(best,h);
        }
        return best;
    }
};

//CAN USE BINARY SEARCH TOO
