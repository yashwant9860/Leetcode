class Solution {
public:
    int minimumCost(vector<int>& cost) {
        int n=cost.size();
        sort(cost.begin(),cost.end());
        int ans=0;
        for(int i=n-1;i>=0;i=i-3)
        {
             if(i==0)
                ans+=cost[i];
            else
                ans+=cost[i]+cost[i-1];
        }
        return ans;
    }
};
