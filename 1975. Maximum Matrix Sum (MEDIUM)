class Solution {
public:
    long long maxMatrixSum(vector<vector<int>>& matrix) {
        int m=matrix.size(),n=matrix[0].size();
        int mi=INT_MAX;
        long long sum=0,cnt=0;
        for(int i=0;i<m;i++)
        {
            for(int j=0;j<n;j++)
            {
                sum+=abs(matrix[i][j]);
                mi=min(mi,abs(matrix[i][j]));
                if(matrix[i][j]<0)
                    cnt++;
            }
        }
        if(cnt%2==0)
            return sum;
        return sum-2*mi;
        
    }
};
