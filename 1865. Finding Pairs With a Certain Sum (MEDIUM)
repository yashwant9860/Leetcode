class FindSumPairs {
    vector<int>v1,v2;
    map<int,int>m;
public:
    FindSumPairs(vector<int>& nums1, vector<int>& nums2) {
        v1=nums1;
        v2=nums2;
        for(auto a:nums2)
            m[a]++;
    }
    
    void add(int index, int val) {
        m[v2[index]]--;
        v2[index]+=val;
        m[v2[index]]++;
        
    }
    
    int count(int tot) {
        int ans=0;
        for(auto a:v1)
        {
            if(m.find(tot-a)!=m.end())
                ans+=m[tot-a];
        }
        return ans;
    }
};

/**
 * Your FindSumPairs object will be instantiated and called as such:
 * FindSumPairs* obj = new FindSumPairs(nums1, nums2);
 * obj->add(index,val);
 * int param_2 = obj->count(tot);
 */
