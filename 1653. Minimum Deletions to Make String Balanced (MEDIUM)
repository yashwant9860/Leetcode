class Solution {
public:
    int minimumDeletions(string s) {
        int n=s.length();
        if(n==1)
            return false;
        vector<vector<int>>v(2,vector<int>(n,0));
        if(s[n-1]=='a')
            v[0][n-1]=1;
        if(s[0]=='b')
            v[1][0]=1;
        for(int i=1;i<n-1;i++)
        {
            if(s[n-1-i]=='a')
                v[0][n-1-i]=1;
            if(s[i]=='b')
                v[1][i]=1;
            v[0][n-i-1]+=v[0][n-i];
            v[1][i]+=v[1][i-1];
        }
        v[1][n-1]+=(s[n-1]=='b')+v[1][n-2];
        v[0][0]+=(s[0]=='a')+v[0][1];
        int best=INT_MAX;
        if(v[0][0]==0||v[1][n-1]==0)
            return 0;
        for(int i=0;i<n;i++)
            best=min(best,v[0][i]+v[1][i]-1);
        return best;
    }
};
