class Solution {
public:
    long long getDescentPeriods(vector<int>& prices) {
        long long tot=0,cnt=1;
        int n=prices.size();
        for(int i=1;i<n;i++)
        {
            if(prices[i]-prices[i-1]==-1)
            {
                ++cnt;
                tot+=cnt;
            }
            else
            {cnt=1;tot++;}
        }
        return ++tot;
    }
};
