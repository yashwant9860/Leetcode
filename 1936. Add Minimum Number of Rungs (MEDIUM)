class Solution {
public:
    int addRungs(vector<int>& rungs, int dist) {
        int n=rungs.size(),a=0;
        if(rungs[0]>dist)
        {
            if(rungs[0]%dist==0)
                a+=rungs[0]/dist-1;
            else
                a+=rungs[0]/dist;
        }
        for(int i=0;i<n-1;i++)
        {
            int k=rungs[i+1]-rungs[i];
            if(k>dist)
            {
                if(k%dist==0)
                    a+=k/dist-1;
                else
                    a+=k/dist;
            }
        }
        return a;
    }
};
