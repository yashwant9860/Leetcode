class Solution {
public:
    int hIndex(vector<int>& citations) {
        sort(citations.begin(),citations.end(),greater<int>{});
        int n=citations.size(),lo=0,hi=n-1,mid;
        while(lo<=hi)
        {
            mid=(lo+hi)/2;
            if(citations[mid]>=mid+1)
            {                
                if(mid+1<n&&citations[mid+1]<mid+2)
                return mid+1;
                else if(mid+1==n)
                    return mid+1;
                else
                    lo=mid+1;
            }
            else if(citations[mid]<mid+1)
                hi=mid-1;
            else
                lo=mid+1;
        }
        return lo;
    }
};
