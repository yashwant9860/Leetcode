class Solution {
public:
    int maxDistance(vector<int>& nums1, vector<int>& nums2) {
        int n1=nums1.size(),n2=nums2.size(),best=0;
        for(int j=0;j<n2;j++)
        {
            int lo=0,hi=min(j,n1-1),mid;
            if(nums1[hi]<=nums2[j]&&nums2[j]<nums1[0]){
            while(lo<=hi)
            {
                mid=(hi+lo)/2;
                if(nums1[mid]<=nums2[j]&&nums1[mid-1]>nums2[j])
                {best=max(best,j-mid);break;}
                else if(nums1[mid]>nums2[j])
                    lo=mid+1;
                else
                    hi=mid-1;
            }
            }
            else if(nums2[j]>=nums1[0])
                best=max(best,j);              
        }
        return best;
    }
};
