class Solution {
public:
    int sumSubarrayMins(vector<int>& arr) {
        long long sum=0,mod=1e9+7;
        int n=arr.size();
        vector<long long>left(n,0),right(n,0);
        stack<int>s;
        for(int i=0;i<n;i++)
        {
            while(!s.empty()&&arr[s.top()]>arr[i])s.pop();
            if(!s.empty())left[i]=i-s.top();
            else left[i]=i+1;
            s.push(i);
        }
        while(!s.empty())s.pop();
        for(int i=n-1;i>=0;i--)
        {
            while(!s.empty()&&arr[s.top()]>=arr[i])s.pop();
            if(!s.empty())right[i]=s.top()-i;
            else right[i]=n-i;
            s.push(i);
        }
        
        for(int i=0;i<n;i++)
        {
            long long pr=1;
            pr=(left[i]*right[i])%mod;
            sum+=(pr*arr[i])%mod;
            sum%=mod;
            
        }
        return sum;
    }
};
