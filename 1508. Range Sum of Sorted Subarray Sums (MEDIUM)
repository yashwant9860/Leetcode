class Solution {
public:
    int rangeSum(vector<int>& nums, int n, int left, int right) {
        map<long long,int>m;
        long long mod=1e9+7;
        for(int i=0;i<n;i++)
        {
            long long sum=0;
            for(int j=i;j<n;j++)
            {
                sum+=nums[j];
                if(m.find(sum)!=m.end())
                    m[sum]++;
                else
                    m[sum]=1;
            }
        }
        long long tot_left=0,tot_right=0;
        for(auto &a:m)
        {
            int c=a.second;
            while(c--)
            {
                if(left-1!=0)
                {
                    tot_left+=a.first;
                    left--;
                }
                if(right!=0)
                {
                    tot_right+=a.first;
                    right--;
                }
                if(right==0)
                    break;
            }
            if(left==0&&right==0)
                return (tot_right-tot_left)%mod;
        }
        return (tot_right-tot_left)%mod;
        
    }
};
