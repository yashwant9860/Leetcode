class Solution {
int f(int n,int row,vector<vector<int>>&v)
{
    if(row==n)
        return 1;
    int ans=0;
    for(int i=0;i<n;i++)
    {
        int flag=0;
        for(auto a:v)
        {
            if((abs(a[0]-row)==abs(i-a[1])||i==a[1]))
            {
                flag=1;
                break;       
            }
        }
        if(flag==1)
            continue;
        v.push_back(vector<int>{row,i});
        ans+=f(n,row+1,v);
        v.pop_back();
    }
    return ans;
}
public:
    int totalNQueens(int n) {
        vector<vector<int>>v;
       return f(n,0,v);
    }
};
