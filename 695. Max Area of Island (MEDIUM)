class Solution {
    int dfs(vector<vector<int>>&v,int i, int j)
    {
        if(i<0||i>=v.size()||j<0||j>=v[0].size()||v[i][j]==0)
            return 0;
        v[i][j]=0;
        return 1+dfs(v,i+1,j)+dfs(v,i-1,j)+dfs(v,i,j-1)+dfs(v,i,j+1);
    }
public:
    int maxAreaOfIsland(vector<vector<int>>& grid) {
        int m=grid.size(),n=grid[0].size(),ma=0;
        for(int i=0;i<m;i++)
        {
            for(int j=0;j<n;j++)
                ma=max(ma,dfs(grid,i,j));
        }
        return ma;
    }
};
