class Solution {
    void dfs(vector<vector<int>>&v,int i,int j,vector<int>&f)
    {
        if(i<0||i>=v.size()||j<0||j>=v[0].size())
            f[0]=1;

        if(i<0||i>=v.size()||j<0||j>=v[0].size()||v[i][j]==0)
            return;
        f[1]++;
        v[i][j]=0;
        dfs(v,i+1,j,f);
        dfs(v,i-1,j,f);
        dfs(v,i,j-1,f);
        dfs(v,i,j+1,f);
    }
public:
    int numEnclaves(vector<vector<int>>& grid) {
        int m=grid.size();
        int n=grid[0].size();
        int s=0;
        vector<int>f(2,0);
        for(int i=0;i<m;i++)
        {
            for(int j=0;j<n;j++)
            {
                f[0]=0,f[1]=0;
                int a=grid[i][j];
                if(grid[i][j]==1)
                dfs(grid,i,j,f);
                if(a==1 && f[0]==0)
                s=s+f[1];
            }
        }
        return s;
    }
};
