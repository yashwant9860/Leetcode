class Solution {
public:
    vector<vector<int>> updateMatrix(vector<vector<int>>& mat) {
        int m=mat.size(),n=mat[0].size();
        vector<vector<int>>dp(m,vector<int>(n,-1));
        queue<pair<int,int>>q;
        vector<vector<int>>dir{{1,0},{0,1},{-1,0},{0,-1}};
        for(int i=0;i<m;i++)
        {
            for(int j=0;j<n;j++)
            {
                if(mat[i][j]==0)
                {
                    dp[i][j]=0;
                    
                    for(auto a:dir)
                    {
                        int x=i+a[0];
                        int y=j+a[1];
                        if(x>=0&&x<m&&y>=0&&y<n&&dp[x][y]==-1)
                        {q.push({x,y});dp[x][y]=1;}
                    }
                }
            }
        }
        int s=2;
        while(!q.empty())
        {
            int k=q.size();
            while(k--)
            {
                int x=q.front().first;
                int y=q.front().second;
                for(auto a:dir)
                {
                    int c=x+a[0];
                    int d=y+a[1];
                    if(c>=0&&c<m&&d>=0&&d<n&&dp[c][d]==-1){
                        q.push({c,d});
                        dp[c][d]=s;
                    }
                }
                q.pop();
            }
            s++;
        }
        return dp;
    }
};
