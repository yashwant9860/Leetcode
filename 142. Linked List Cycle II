/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    ListNode *detectCycle(ListNode *head) {
        if(head==NULL || head->next==NULL)
            return NULL;
        ListNode *a=head,*b=head;
        map<ListNode*,int>m;
        int i=0;
        while(a->next!=NULL)
        {
            if(m.find(a)!=m.end())
                return a;
            else{
                m.insert({a,i});
                i++; 
            }
            a=a->next;
        }
        return NULL;
    }
};

