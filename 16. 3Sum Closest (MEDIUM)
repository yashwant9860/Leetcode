class Solution {
public:
    int threeSumClosest(vector<int>& nums, int target) {
        sort(nums.begin(),nums.end());
        int n=nums.size(),ans=INT_MAX,s=0;
        for(int i=0;i<n-1;i++)
        {
            int k=nums[i];
            int l=i+1;
            int r=n-1;
            while(l<r)
            {
                int x=k+nums[l]+nums[r];
                if(x>target)
                {
                    r--;
                    if(ans>abs(target-x))
                    {   
                        s=x;
                        ans=min(ans,abs(target-x));
                    } 
                }
                else if(target>x)
                {
                    l++;
                    if(ans>abs(target-x))
                    {   
                        s=x;
                        ans=min(ans,abs(target-x));
                    }
                }
                else                 
                 return target;
            }
        }
        return s;
    }
};
