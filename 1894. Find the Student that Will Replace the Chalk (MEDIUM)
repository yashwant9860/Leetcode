class Solution {
public:
    int chalkReplacer(vector<int>& chalk, int k) {
     long long s=0,f=0;
        int n=chalk.size();
        for(auto a:chalk)
            s+=a;
        f=k%s;
        for(int i=0;i<n;i++)
        {
            if(f-chalk[i]>=0)
                f-=chalk[i];
            else
                return i;
        }
        return 0;
    }
};
