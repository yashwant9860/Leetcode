class Solution {
public:
    int findNumberOfLIS(vector<int>& nums) {
        int n=nums.size(),best=1;
        vector<int>v(n,1),cnt(n,1);
        for(int i=1;i<n;i++)
        {
            for(int j=0;j<i;j++)
            {
                if(nums[i]>nums[j])
                {
                    
                    if(v[i]<v[j]+1)
                    { v[i]=v[j]+1;cnt[i]=cnt[j];}
                    else if(v[i]==v[j]+1)
                        cnt[i]+=cnt[j];
                }
                best=max(v[i],best);
            }
        }
        int ans=0;
        for(int i=0;i<n;i++)
        {
            if(v[i]==best)
                ans+=cnt[i];
        }
        return ans;
    }
};
