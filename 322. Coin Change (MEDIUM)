class Solution {
    
public:
    int coinChange(vector<int>& coins, int amount) {
        sort(begin(coins),end(coins));
        long dp[amount+1];
        dp[0]=0;
        for(int i=1;i<amount+1;i++)
        {
            dp[i]=INT_MAX;
            for(auto c:coins)
            {
                if(i-c<0)
                    break;
                dp[i]=min(dp[i],dp[i-c]+1);
            }
        }
        if(dp[amount]>=INT_MAX)
            return -1;
        return (int)dp[amount];
    }
};
