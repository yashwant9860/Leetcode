class Solution {
    static bool f(vector<int>&a,vector<int>&b)
    {
           return a[1]<b[1];
    }
public:
    int findMinArrowShots(vector<vector<int>>& points) {
        sort(points.begin(),points.end(),f);
        
        int n=points.size(),ans=0,arrow=points[0][1];
        for(int i=0;i<n;i++)
        {
            if(ans==0||points[i][0]>arrow)
            {ans++;arrow=points[i][1];}
        }
        return ans;
    }
};
