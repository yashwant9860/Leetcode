class Solution {
public:
    int maximumTop(vector<int>& nums, int k) {
        int n=nums.size();
        if(k%2==1&&n==1)
            return -1;
        int mx=INT_MIN;

            for(int i=0;i<k-1&&i<n;i++)
                mx=max(mx,nums[i]);
        if(k<n)
            mx=max(mx,nums[k]);
        return mx;
    }
};
