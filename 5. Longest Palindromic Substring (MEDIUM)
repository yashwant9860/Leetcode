class Solution {
public:
    string longestPalindrome(string s) {
        int n=s.length();
        vector<vector<int>>dp(n,vector<int>(n,0));
        string ans="";
        int l=0;
        for(int i=n-1;i>=0;i--)
        {
            
            for(int j=i;j<n;j++)
            {
                
                 dp[i][j]=(s[i]==s[j])&&(j-i<3 || dp[i+1][j-1]);
                if(dp[i][j]==1 && l<j-i+1)
                {
                    ans=s.substr(i,j-i+1);
                    l=j-i+1;
                }
            }
        }
        return ans;
    }
};
