class Solution {
public:
    int minSubArrayLen(int target, vector<int>& nums) {
     
        int n=nums.size();
        int r=0,l=0;
        int sum=0;
        int ans=INT_MAX;
        while(r<n)
        {
            sum=sum+nums[r];
            r++;
            while(sum>=target)
            {
                ans=min(ans,r-l);
                sum-=nums[l];
                l++;
            }
            
            
        }
        if(ans==INT_MAX)
            return 0;
        else
            return ans;
    }
};
