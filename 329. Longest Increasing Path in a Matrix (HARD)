class Solution {
    int dp[201][201];
    int topdown(vector<vector<int>>&matrix,int i,int j)
    {
        if(i<0||i>=matrix.size()||j<0||j>=matrix[0].size())
            return 0;
        if(dp[i][j])
            return dp[i][j];
        if(i-1>=0)
        {
            if(matrix[i][j]<matrix[i-1][j])
                dp[i][j]=max(dp[i][j],1+topdown(matrix,i-1,j));
        }
        if(j-1>=0)
        {
            if(matrix[i][j]<matrix[i][j-1])
                dp[i][j]=max(dp[i][j],1+topdown(matrix,i,j-1));
        }
        if(i+1<matrix.size())
        {
            if(matrix[i][j]<matrix[i+1][j])
                dp[i][j]=max(dp[i][j],1+topdown(matrix,i+1,j));
        }
        if(j+1<matrix[0].size())
        {
            if(matrix[i][j]<matrix[i][j+1])
                dp[i][j]=max(dp[i][j],1+topdown(matrix,i,j+1));
        }
        return dp[i][j];
    }
public:
    int longestIncreasingPath(vector<vector<int>>& matrix) {
        for(int i=0;i<201;i++)
            fill_n(dp[i],201,0);
        int mx=1;
        for(int i=0;i<matrix.size();i++)
        {
            
            for(int j=0;j<matrix[0].size();j++)
            {
                if(dp[i][j])
                {mx=max(mx,dp[i][j]+1);continue;}
                mx=max(topdown(matrix,i,j)+1,mx);
                    
            }
        }
        return mx;
    }
};
