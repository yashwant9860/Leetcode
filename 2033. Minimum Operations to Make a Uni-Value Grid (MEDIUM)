class Solution {
public:
    int minOperations(vector<vector<int>>& grid, int x) {
        int m=grid.size();
        int n=grid[0].size();
        vector<int>v;
        for(int i=0;i<m;i++)
        {
            for(int j=0;j<n;j++)
            {
                v.push_back(grid[i][j]);
            }
        }
        sort(v.begin(),v.end());
        int k=v.size();
        int l=v[k/2];
        int ans=0;
        for(int i=0;i<k;i++)
        {
            if((l-v[i])%x==0)
                ans=ans+abs(l-v[i])/x;
            else
                return -1;
        }
        return ans;
    }
};
