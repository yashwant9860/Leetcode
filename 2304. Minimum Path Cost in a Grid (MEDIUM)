class Solution {
public:
    int minPathCost(vector<vector<int>>& grid, vector<vector<int>>& moveCost) {
        int n=grid[0].size(),m=grid.size();
        vector<int>dp(n,0);
        for(int i=0;i<n;i++)
            dp[i]=grid[0][i];
        for(int i=1;i<m;i++)
        {
            vector<int>dp2(n,INT_MAX);
            for(int j=0;j<n;j++)
            {
                for(int k=0;k<n;k++)
                {
                    dp2[j]=min(dp[k]+moveCost[grid[i-1][k]][j]+grid[i][j],dp2[j]);
                }
            }
            dp=dp2;
        }
        return *min_element(dp.begin(),dp.end());
        
    }
};
