class Solution {
public:
    int maximumUniqueSubarray(vector<int>& nums) {
        int arr[10001],n=nums.size(),l=0,currs=0,mx=0;
        memset(arr,0,sizeof arr);
        for(int i=0;i<n;i++)
        {
            arr[nums[i]]++;
            if(arr[nums[i]]==2)
            {
                while(l<i&&nums[l]!=nums[i])
                {
                    arr[nums[l]]--;
                    currs-=nums[l];
                    l++;
                }
                arr[nums[l]]--;
                l++;
            }
            else
            {
                currs+=nums[i];
            }
            mx=max(mx,currs);
        }
        return mx;
    }
};
