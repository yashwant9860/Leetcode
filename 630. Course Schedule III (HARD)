class Solution {
    static bool f(vector<int>&a,vector<int>&b)
    {
        return a[1]<b[1];
    }
public:
    int scheduleCourse(vector<vector<int>>& courses) {
        sort(courses.begin(),courses.end(),f);
        int n=courses.size(),t=0;
        priority_queue<int>pq;
        for(auto a:courses)
        {
            t+=a[0];
            pq.push(a[0]);
            if(t>a[1])
            {
                t-=pq.top();
                pq.pop();
            }
        }
        return pq.size();
    }
};
