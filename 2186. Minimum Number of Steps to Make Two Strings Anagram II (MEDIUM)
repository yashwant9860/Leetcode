class Solution {
public:
    int minSteps(string s, string t) {
        int h1[26],n1=s.length(),n2=t.length(),sum=0;
        memset(h1,0,sizeof h1);
        for(int i=0;i<n1;i++)h1[s[i]-'a']++;
        for(int i=0;i<n2;i++)h1[t[i]-'a']--;
        for(int i=0;i<26;i++)sum+=abs(h1[i]);
        return sum;
    }
};
