class Solution {
public:
    int maxScore(vector<int>& cardPoints, int k) {
        int n=cardPoints.size(),ans=0,sum=0,s=0;
        for(int i=0;i<n;i++)sum+=cardPoints[i];
        for(int i=0;i<n-k;i++)s+=cardPoints[i];
        ans=max(sum-s,ans);
        for(int i=n-k;i<n;i++)
        {
            s+=cardPoints[i]-cardPoints[i-n+k];
            ans=max(ans,sum-s);
        }
        return ans;
            
    }
};
