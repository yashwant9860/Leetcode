class Solution {
public:
    bool checkPossibility(vector<int>& nums) {
        int n=nums.size();
        vector<int>v1,v2,nums1;
        for(int i=0;i<n-1;i++)
        {
            if(nums[i]>nums[i+1])
            {
                v1=nums;
                v1[i]=v1[i+1];
                v2=nums;
                v2[i+1]=v2[i];
                break;
            }
        }
        nums=v1;
        nums1=v2;
        sort(v1.begin(),v1.end());
        sort(v2.begin(),v2.end());
        return nums==v1||nums1==v2;
    }
};
