class Solution {
public:
    vector<int> numMovesStones(int a, int b, int c) {
        int x=min(min(a,b),c);
        int z=max(max(a,b),c);
        int y;
        if(b>x&&b<z)
            y=b;
        else if(c>x&&c<z)
            y=c;
        else y=a;
        a=x;
        b=y;
        c=z;
        vector<int>ans(2,0);
        if(b-a==1||c-b==1)
            ans[0]=1;
        if(b-a==1&&c-b==1)
            ans[0]=0;
        if(!(b-a==1||c-b==1))
        {
            if(b-a==2||c-b==2)
                ans[0]=1;
            else
                ans[0]=2;
        }
        ans[1]+=c-b-1+b-a-1;
        return ans;
    }
};
