class Solution {
public:
    int integerReplacement(int n) {
       int c=0;
        long long k=n;
        while(k!=1)
       {
           if((k&1)==0)
           {
               k/=2;
           }
            else
            {
                if((k+1)%4==0&&k!=3)
                    k++;
                else
                    k--;
            }
            c++;
       }
        return c;
    }
};
