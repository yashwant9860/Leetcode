class Solution {
    vector<vector<int>>dp;
    int helper(int curr,int n,map<int,vector<int>>&m)
    {
        long long mod=1e9+7;
        if(n<=0)
            return 0;
        if(dp[n][curr]!=-1)
            return dp[n][curr];
        for(auto a:m[curr])
        {dp[n][curr]+=helper(a,n-1,m)+1;dp[n][curr]%=mod;}
    
        return dp[n][curr];
    }
public:
    int knightDialer(int n) {
        map<int,vector<int>>m;
        m[1]={6,8};
        m[2]={7,9};
        m[3]={4,8};
        m[4]={3,9,0};
        m[5]={};
        m[6]={1,7,0};
        m[7]={2,6};
        m[8]={3,1};
        m[9]={2,4};
        m[0]={6,4};
        dp.resize(n+1,vector<int>(10,-1));
        for(int i=0;i<=9;i++)
            dp[n][i]+=helper(i,n-1,m)+2;
        long long s=0,mod=1e9+7;
        for(int i=0;i<=9;i++)
        {s+=dp[n][i];}
        return s%mod;
    }
};
