class Solution {
    void f(vector<int>v,vector<vector<int>>&ans,int k,int n,int currind,int sum)
    {
        if(sum==n && k==0)
        {ans.push_back(v);}
        if(k==0)
            return ;
        for(int i=currind;i<9;i++)
        {
            if(sum+i+1<=n)
            {
                v.push_back(i+1);
                f(v,ans,k-1,n,i+1,sum+i+1);
                v.pop_back();
            }
        }
    }
public:
    vector<vector<int>> combinationSum3(int k, int n) {
        vector<int>v;
        vector<vector<int>>ans;
        f(v,ans,k,n,0,0);
        return ans;
    }
};
