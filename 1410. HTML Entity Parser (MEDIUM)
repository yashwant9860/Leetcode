class Solution {
public:
    string entityParser(string text) {
        int n=text.length();
        string ans="";
        for(int i=0;i<n;i++)
        {
            int flag=0;
           if(text[i]=='&'){
            if(i+6<=n)
            {
                string k="";
                k=text.substr(i,6);
                if(k=="&quot;")
                {
                    i=i+5;
                    ans+='"';
                    flag=1;
                }
                if(k=="&apos;")
                {
                    i=i+5;
                    ans+="'";
                    flag=1;
                }
            }
            if(i+4<=n)
            {
                string k="";
                k=text.substr(i,4);
                if(k=="&gt;")
                {
                    i=i+3;
                    ans+='>';
                    flag=1;
                }
                if(k=="&lt;")
                {
                    i=i+3;
                    ans+='<';
                    flag=1;
                }
            }
            if(i+5<=n)
            {
                string k="";
                k=text.substr(i,5);
                if(k=="&amp;")
                {
                    i=i+4;
                    ans+='&';
                    flag=1;
                }
            }
            if(i+7<=n)
            {
                string k="";
                k=text.substr(i,7);
                if(k=="&frasl;")
                {
                    i+=6;
                    ans+='/';
                    flag=1;
                }
            }
        }
            if(flag!=1)
                ans+=text[i];
        }
        return ans;
    }
};
